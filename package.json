{
     "name": "forest-plot-generator",
     "version": "1.0.0",
     "description": "Generate professional forest plots",
     "main": "main.js",
     "scripts": {
       "start": "electron .",
       "build": "electron-builder --win --x64",
       "build-mac": "electron-builder --mac"
     },
     "build": {
       "appId": "com.forestplot.generator",
       "productName": "Forest Plot Generator",
       "win": {
         "target": [
           {
             "target": "nsis",
             "arch": ["x64"]
           }
         ]
       },
       "nsis": {
         "oneClick": false,
         "allowToChangeInstallationDirectory": true
       }
     },
     "devDependencies": {
       "electron": "^28.0.0",
       "electron-builder": "^24.9.0"
     }
   }